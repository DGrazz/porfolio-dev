---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import Projects from "../components/Projects.astro";
import Certificates from "../components/Certificates.astro";
import SobreMi from "../components/SobreMi.astro";
import Footer from "../components/Footer.astro";

import GitHubIcon from "../components/Icons/GitHub.astro";
import LinkedInIcon from "../components/Icons/LinkedIn.astro";
import InstagramIcon from "../components/Icons/Instagram.astro";
import CodeIcon from "../components/Icons/Code.astro";
import UserCheckIcon from "../components/Icons/UserCheck.astro";
import CertificateIcon from "../components/Icons/Certificate.astro";
---

<Layout
  title="Porfolio de Mario Garcia - Desarrollador y Programador Web"
  description="Contrata a Mario Garcia para crear tu aplicacion web. Desarrollador y programador web especializado en CSS y JavaScript."
>
  <main class="px-4 mx-auto flex flex-col">
    <SectionContainer class="py-44 pb-24">
      <img
        class="rounded-full size-20 object-cover mb-4"
        src="/me-profile.webp"
        alt="Imagen de Mario Garcia"
      />
      <h1 class="text-white text-xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">
        Hey, soy DGrazz 
        <a
          href="https://www.instagram.com/mariogl._"
          target="_blank"
          rel="noopener"
          class="flex items-center transition md:justify-center md:hover:scale-105"
          ><Badge>Disponible para trabajar</Badge></a>
      </h1>
      <h2 class="text-xl lg:text-xl opacity-80 text-wrap max-w-[700px]">
        Desarrollador front-end de Barcelona, España.
        Apasionado por crear sitios web y startups que resuelvan problemas, con
        la ambición de establecer una agencia de desarrollo web única y global.
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://github.com/DGrazz">
          <GitHubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill
          href="https://www.linkedin.com/in/mario-garcia-lopez-b748662b3/"
        >
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill
          href="https://www.instagram.com/mariogl._"
        >
          <InstagramIcon class="size-4 md:size-6" />
          Instagram
        </SocialPill>
      </nav>
    </SectionContainer>

	<SectionContainer id="proyectos">
		<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
			<CodeIcon class="size-8" />
			Proyectos
		</h2>
		<Projects />
	</SectionContainer>

  <SectionContainer id="certificados">
		<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
			<CertificateIcon class="size-8" />
			Certificados
		</h2>
		<Certificates />
	</SectionContainer>

  <SectionContainer id="sobre-mi">
		<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
			<UserCheckIcon class="size-8" />
			Sobre mi
		</h2>
		<SobreMi />
	</SectionContainer>

  <Footer />
	
  </main>
</Layout>
